---
const { type, containerClass, id, val, labelTitle } = Astro.props
---

<div class="input-container">
	<label class="input-container__label" for={id}>{labelTitle}</label>
	<div class={containerClass}>
		<div class="input-container__prefix">{val}</div>
		<input type={type} id={id} class="input-container__input" value="" />
	</div>
</div>

<style>
	.input-container__section {
		display: flex;
		border: 0.5px solid var(--color--slate-900);
		border-radius: 2px;
		overflow: hidden;
	}

	.input-container__section--reversed {
		display: flex;
		flex-direction: row-reverse;
		border: 0.5px solid var(--color--slate-900);
		border-radius: 2px;
		overflow: hidden;
	}

	.input-container__prefix {
		background-color: var(--color--slate-100);
		width: fit-content;
		padding: 0.5em 1em;
	}

	.input-container__input {
		border: none;
	}
</style>
