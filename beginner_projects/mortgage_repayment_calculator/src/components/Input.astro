---
const { type, containerClass, id, val } = Astro.props
---

<div class={containerClass}>
	<div class="input-container__prefix">{val}</div>
	<input type={type} id={id} class="input-container__input" value="" />
</div>

<style>
	.input-container {
		display: flex;
		border: 0.5px solid var(--color--slate-900);
		border-radius: 2px;
		overflow: hidden;
	}

	.input-container--reversed {
		display: flex;
		flex-direction: row-reverse;
		border: 0.5px solid var(--color--slate-900);
		border-radius: 2px;
		overflow: hidden;
	}

	.input-container__prefix {
		background-color: var(--color--slate-100);
		width: fit-content;
		padding: 0.5em 1em;
	}

	.input-container__input {
		border: none;
	}
</style>
