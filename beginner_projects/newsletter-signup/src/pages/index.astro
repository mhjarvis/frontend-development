<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Newsletter sign-up form</title>
	</head>
	<body>
		<main class="main">
			<picture>
				<source
					srcset="../images/illustration-sign-up-desktop.svg"
					media="(min-width: 1024px"
				/>
				<img src="images/illustration-sign-up-mobile.svg" />
			</picture>

			<section class="content">
				<h1 class="content__title">Stay updated!</h1>

				<!-- List Element -->
				<ul class="list">
					<p class="list__description">
						Join 60,000+ product managers receiving monthly updates on:
					</p>
					<li class="list__item">
						<img
							src="/public/images/icon-list.svg"
							alt="check-mark"
							srcset=""
							class="list__item--icon"
						/>
						<p class="list__item--text">
							Product discovery and building what matters
						</p>
					</li>
					<li class="list__item">
						<img
							src="/public/images/icon-list.svg"
							alt="check-mark"
							srcset=""
							class="list__item--icon"
						/>
						<p class="list__item--text">
							Measuring to ensure updates are a success
						</p>
					</li>
					<li class="list__item">
						<img
							src="/public/images/icon-list.svg"
							alt="check-mark"
							srcset=""
							class="list__item--icon"
						/>
						<p class="list__item--text">And much more!</p>
					</li>
				</ul>

				<!-- Form Element -->
				<form action="" class="form">
					<label for="form__email" class="form__label">Email address</label>
					<input
						type="email"
						class="form__email"
						id="form__email"
						placeholder="email@company.com"
					/>
					<input
						type="submit"
						value="Subscribe to monthly newsletter"
						class="form__submit"
						id="form__submit"
					/>
				</form>
			</section>
		</main>
	</body>
</html>

<script>
	const submit = document.getElementById("form__submit")

	submit.addEventListener("click", (e) => {
		e.preventDefault()
	})
</script>

<style lang="scss">
	@import "../styles/main.scss";

	main {
		max-width: 37.5rem;
		background-color: $white;
	}

	.content {
		padding: 2.5rem;

		&__title {
			font-size: 40px;
			font-family: "Roboto-Bold";
		}
	}

	.list {
		display: grid;
		gap: 10px;
		&__description {
			line-height: 150%;
			margin: 2rem 0;
		}
		&__item {
			display: flex;
			align-items: start;

			&--icon {
			}
			&--text {
				line-height: 150%;
				margin-left: 2rem;
			}
		}
	}

	.form {
		display: flex;
		flex-direction: column;
		margin: 4rem 0 2rem 0;
		&__label {
			font-size: 1.2rem;
			font-family: "Roboto-Bold";
			margin-bottom: 0.5rem;
		}

		&__email {
			padding: 1.5rem 2rem;
			border-radius: 8px;
			border: 1px solid $gray;
			color: $gray;
			font-weight: 100;
		}

		&__submit {
			margin-top: 2rem;
			padding: 1.5rem 0;
			border: none;
			border-radius: 8px;
			background-color: $slateGray;
			color: $white;
		}
	}
</style>
