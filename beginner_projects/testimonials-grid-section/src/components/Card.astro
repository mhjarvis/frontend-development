---
import Image from "astro/components/Image.astro"
const { id, image } = Astro.props
---

<div class="card" id={id}>
	<div class="card__profile-container">
		<Image src={image} alt="Profile picture" class="card__image" />
		<div class="card__information-container">
			<h2 class="card__name"></h2>
			<p class="card__graduate"></p>
		</div>
	</div>
	<div class="card__review-container">
		<h2 class="card__title"></h2>
		<p class="card__text"></p>
	</div>
</div>

<style>
	.card {
		width: 100%;
		height: 200px;
		border: 1px solid black;
	}

	.card__image {
		width: 2.8rem;
		height: 2.8rem;
		border-radius: 50%;
	}
</style>
